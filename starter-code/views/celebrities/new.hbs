<h2>Add a new celebrity</h2>
<h2>{{config.title}}</h2>

<form action="{{config.action}}" method="POST">
  <input type="text" name="name" placeholder="Name" value="{{celebrity.name}}">
  <input type="text" name="occupation" placeholder="Occupation" value="{{celebrity.occupation}}">
  <input type="text" name="catchPhrase" placeholder="catch phrase" value="{{celebrity.catchPhrase}}">
  <input type="submit" value="Create">
  {{#if errorMessage }}
   <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
</form>